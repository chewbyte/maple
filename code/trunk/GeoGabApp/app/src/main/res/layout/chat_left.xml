<RelativeLayout
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="4dp">

    <me.himanshusoni.chatmessageview.ChatMessageView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cmv_backgroundColor="#FFF"
        app:cmv_backgroundColorPressed="#88BABABA"
        app:cmv_cornerRadius="6dp"
        app:cmv_contentPadding="12dp"
        app:cmv_arrowGravity="start"
        app:cmv_showArrow="true"
        app:cmv_arrowPosition="left"
        android:id="@+id/view"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_toEndOf="@+id/profile_image"
        android:padding="2dp">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textColor="#000"
            android:textSize="16sp" />

    </me.himanshusoni.chatmessageview.ChatMessageView>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/profile"
        app:civ_border_width="2dp"
        app:civ_border_color="#4f87ff"
        android:layout_alignTop="@+id/view"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

